@model IEnumerable<Backend.Models.RepositoryModel>

@section Bookmarkstyle{
    <link href="~/Scripts/MyStyleBookmark.css" rel="stylesheet" />
}

@if (Model.Count() > 0)
{
    foreach (var repo in Model)
    {
        <div class="card">
            <img src="@repo.Owner.AvatarUrlPath" alt="Avatar" />
            <div class="repo-info">
                <h4><b>@repo.RepositoryName</b></h4>
            </div>
        </div>


    }
}
else
{
    <h2>No Bookmarks Added</h2>
}